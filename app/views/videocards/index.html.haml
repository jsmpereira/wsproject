%h1
	Listing
	-if params[:brand]
		%span.brand=params[:brand]
	videocards
	="(#{@videocards.total})"
	
.three-quarters
	=paginate @videocards
	%table.listing
		%thead
			%tr
				%td
				%td Brand
				%td Model
				%td Graph Slot
		- @videocards.results.each do |member|
			%tr
				%td=link_to image_tag(member.image), member, :class => 'thumb'
				%td=member.brand
				%td=link_to member.name, member
				%td=member.graph_slot
	=paginate @videocards

.third
	.facets
		%h3 Browse by Brand
		%ul.facet
			-for row in @videocards.facet(:brand).rows
				%li
					= link_to row.value, videocards_path(:brand => row.value)
					="(#{row.count})"