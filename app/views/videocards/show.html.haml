%p#notice= notice

%h1=@videocard.name
%h3=@videocard.item

=link_to 'statements', "", :class => 'toggle'

%div.statements.none
	%h3 Statements

	-@videocard_rdf.each do |solution|
		%p=solution.inspect

-if @videocard.details
	%div
		%ul.details
			-@videocard.details.each_pair do |key, value|
				%li
					%strong=key
					=simple_format(value)