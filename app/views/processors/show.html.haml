.half
	%p#notice= notice
	
	%h1=@processor.name
	%h3=@processor.item
	
	=link_to 'statements', "", :class => 'toggle'
	
	%div.statements.none
		%h3 Statements
		
		%p
			%strong="SELECT * WHERE { <#{ProcessorRdf.for(@processor.item).subject.to_s}> ?p ?o }"
	
		-@processor_rdf.each do |solution|
			%p=solution.inspect
	
	-if @processor.details
		%div
			%table#details
				-@processor.details.each_pair do |key, value|
					%tr
						%td=key
						%td=simple_format(value)

.half 
	=image_tag @processor.image, :class => 'pic'

	#recommendations
		%h2 Recommendations

		%table
			-Processor.limit(3).each do |p|
				%tr
					%td=image_tag p.image, :class => 'thumb'
					%td=link_to p.name, p
					%td=p.brand