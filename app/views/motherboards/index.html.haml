%h1
	Listing
	-if params[:brand]
		%span.brand=params[:brand]
	motherboards
	="(#{@motherboards.total})"

.three-quarters
	=paginate @motherboards
	%table.listing
		%thead
			%tr
				%td
				%td Brand
				%td Model
				%td CPU Socket
				%td Memory Type
				%td Graph Slot
		- @motherboards.results.each do |member|
			%tr
				%td=image_tag member.image, :class => 'thumb'
				%td=member.brand
				%td=link_to member.name, member
				%td=member.cpu_socket
				%td=member.memory_type
				%td=member.graph_slot
	=paginate @motherboards
.third
	.facets
		%h3 Browse by Brand
		%ul.facet
			-for row in @motherboards.facet(:brand).rows
				%li
					= link_to row.value, motherboards_path(:brand => row.value)
					="(#{row.count})"