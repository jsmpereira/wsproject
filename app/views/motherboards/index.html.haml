%h1
	Listing
	-if params[:brand]
		%span.brand=params[:brand]
	motherboards
	="(#{@motherboards.total})"

.three-quarters
	=paginate @motherboards
	=render :partial => 'searches/result', :object => @motherboards.results
	=paginate @motherboards
.third
	.facets
		%h3 Browse by Brand
		%ul.facet
			-for row in @motherboards.facet(:brand).rows
				%li
					= link_to row.value, motherboards_path(:brand => row.value)
					="(#{row.count})"