%p#notice= notice

%h1=@motherboard.name
%h3=@motherboard.item

=link_to 'statements', "", :class => 'toggle'

%div.statements.none
	%h3 Statements
	
	-@motherboard_rdf.each do |solution|
		%p=solution.inspect

-if @motherboard.details
	%div
		%ul.details
			-@motherboard.details.each_pair do |key, value|
				%li
					%strong=key
					=simple_format(value)